# 🚀 Brewfile - Homebrew install list for macOS development

# ✅ Install Homebrew (if not installed)
# /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# ✅ Install Everything in This Brewfile
# brew bundle --file=Brewfile

# -----------------------------------
# ⚙️ System Utilities
# -----------------------------------
brew "git"
brew "zsh"
brew "wget"
brew "curl"
brew "tree"
brew "jq"
brew "htop"
brew "btop"  # Advanced system monitor
brew "fzf"
brew "ripgrep"
brew "neovim"
brew "bat"
brew "gh"  # GitHub CLI
brew "ghq"  # Repository management tool
brew "speedtest-cli"  # Network speed testing

# -----------------------------------
# 💻 Development Environments
# -----------------------------------
# Removed "python@3.11"
# Removed "node"
brew "nvm"
